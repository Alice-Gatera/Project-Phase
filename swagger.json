        "description":"User login with email and password",
        "tags": [
               "Login"
            ],
        "parameters":[
          {
          "name":"User login",
          "in":"body",
          "required":true,
          "description":"User login will be json object",
          "schema":{
            "type":"object",
            "properties":{
              "email":{
                "type":"string",
                "example":"habajeunes@gmail.com"
              },
              "password":{
                "type":"string",
                "example":"@12345ami!"
              }
            }
          }

        }
        ],
        "responses":[
        {
          "200":{
            "application/json":{
              "description":"message:login successful! and genarate token",
              "schema":{
                "type":"string",
                "example":"login successful!",
                "properties":{
                  "status":{
                    "type":"integer",
                    "example":"200"
                  },
                  "message":{
                    "type":"string",
                   "example":"login successful!"
                },
                "token":{
